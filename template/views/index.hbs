    </div>

    {{! Card  }}
    <div class="mx-auto container   " >

      <div class="card-body row gy-3 d-flex align-items-center justify-content-center ">
        <h5 class="card-title text-center">Generate
          <span class="text-primary">e-Invoices </span>easily</h5>
        <div class=" fw-normal">
          <i class="fa-solid fa-hand-point-right fa-2xl"></i>
          <span>Manage Stock,Accounting & GST Returns</span>
        </div>

       <div class=" fw-normal text-wrap">
          <i class="fa-solid fa-hand-point-right fa-2xl"></i>
          <span class="text-primary  strong">Free Digtital Collection
           </span> <span >with Auto Reconciliation & GST Returns </span>
        </div>

      <div class=" fw-normal text-wrap">
          <i class="fa-solid fa-hand-point-right fa-2xl"></i>
          <span>Delivery inside ERP <span class="text-primary">ShipOnClick.com</span></span>
        </div>
        <div>
          <i class="fa-solid fa-hand-point-right fa-2xl"></i>
          <span>Free Website worth </span><span class="text-primary"><span>&#8377;</span>5000</span>
        </div>
       <div class=" fw-normal text-wrap">
          <i class="fa-solid fa-hand-point-right fa-2xl"></i>
         <span class="text-wrap"> <span class="text-primary"> Online Order App</span><span> for Retailers,Salesman & Delivery Boy</span></span>
        </div>
    <div class=" fw-normal text-wrap">
          <i class="fa-solid fa-hand-point-right fa-2xl"></i>
          <span class="text-wrap">Unsecured <span class="text-primary" > Business Loans </span> <span>for Financing your Business Growth & Bill Payments</span>
        </div>

      </div>
    </div>

    {{! Form start }}
    <form
      id="form"
      action="/empdata"
      method="post"
      class="m-auto bg-light container  mt-2   mt-10 shadow-lg p-3 mb-5 bg-body rounded needs-validation rounded"
      novalidate
      onsubmit=" validation()"
      
    >

      <div class="mb-3">

        <div class="mb-3 text-center text-dark">
          <h5 class="fw-bold ">Book Free Demo</h5>
        </div>

        <div class="mb-3">
          <input
            type="tel"
            name="phone"
            class="form-control"
            id="phone"
            placeholder="Phone Number"
            autocomplete="off"
            pattern="[0-9]{10}"
            required
          />
          <span id="check" class="text-danger"> </span>
        </div>


        <div class="mb-3">
          <input
            type="text"
            name="pincode"
            class="form-control"
            id="pincode"
            placeholder="PinCode"
            autocomplete="off"
            pattern="[0-9]{6}"
              required
          />
          <div class="invalid-feedback">
            Please choose a Pincode.
          </div>
        </div>
        <div class="mb-3">
          <input
            type="text"
            name="name"
            class="form-control"
            id="names"
            placeholder="Name/Firm Name"
            pattern="[A-Za-z]{3}"
            autocomplete="off"
            required
          />
          <div class="invalid-feedback">
            Please choose Correct Your Name , MoreThan 3 words.
          </div>
        </div>
        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-primary rounded">BOOK DEMO</button>
        </div>

      </div>
    </form>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    
<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
(function () {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  var forms = document.querySelectorAll('.needs-validation')

  // Loop over them and prevent submission
  Array.prototype.slice.call(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
})()
</script>


  </body>
</html>